{{>layout/header}}

<h1> AI-Eats</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form action="/member/login" method="post">
            <div class="form-group">
                <label for="ID">ID</label>
                <input type="text" name="memberID" class="form-control" id="ID" placeholder="ID를 입력하세요">
            </div>
            <div class="form-group">
                <label for="password">비밀번호</label>
                <input type="password" name="memberPwd" class="form-control" id="password" placeholder="비밀번호를 입력하세요">
            </div>
            <input type="submit" value="로그인">
        </form>
        <a href="/member/save" role="button" class="btn btn-secondary">회원가입</a>
    </div>
</div>

{{>layout/footer}}